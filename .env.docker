# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_DB=pairwise
POSTGRES_USER=pairwise
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=8080
GIN_MODE=release
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production

# Frontend Configuration
FRONTEND_PORT=3000
API_URL=http://localhost:8080/api
WEBSOCKET_URL=ws://localhost:8080/api/ws

# Nginx Configuration (Production)
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# Application Features
ENABLE_WEBSOCKET=true
ENABLE_FILE_UPLOAD=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_LIFETIME_MINUTES=5

# Security Configuration
CORS_ALLOWED_ORIGINS=*

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads

# Development vs Production
# Set to 'development' for local development
ENVIRONMENT=production